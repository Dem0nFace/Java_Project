pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'   // Name must match Jenkins tools config
        jdk 'JAVA_HOME'      // Same here
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Dem0nFace/Java_Project.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                allure includeProperties: false, jdk: '', results: [[path: 'target/allure-results']]
            }
        }
    }
}
